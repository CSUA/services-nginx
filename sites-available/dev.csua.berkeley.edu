# Nginx config for CSUA
server {
	listen 80;
	server_name dev.csua.berkeley.edu;
	access_log off;
	return 301 https://$host$request_uri;
}
server {
	listen 443 ssl;
	server_name dev.csua.berkeley.edu;
	location / {
		proxy_pass http://csua_backend_dev;
		proxy_http_version 1.1;

		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection 'upgrade';
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;

		proxy_cache_bypass $http_upgrade;

		proxy_redirect off;
	}
	location /media/ {
		alias /webserver/CSUA-backend/media_root/;
	}
	location /static/ {
		alias /webserver/CSUA-backend-dev/static_root/;
	}
    ssl_certificate /etc/letsencrypt/live/www.csua.berkeley.edu-0001/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/www.csua.berkeley.edu-0001/privkey.pem;
 # managed by Certbot
}

upstream csua_backend_dev {
	server localhost:3002 fail_timeout=0;
}
